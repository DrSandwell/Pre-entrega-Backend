<section>
    <form action="/api/users/requestPasswordReset" method="POST">
        <h1>Enviar email de verificacion</h1>
        <div>
            <label for="email">Correo electronico</label>
            <input type="text"name="email" id="email">
        </div>
        <button type="submit">Enviar</button>
        {{#if error}}
        <p>{{error}}</p>
        {{/if}}
    </form>
</section>