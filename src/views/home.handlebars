{{#if user}}
<header>
    <h1>Mi perfil</h1>
    <p>Bienvenido!, {{user.first_name}} {{user.last_name}}!</p>
    <p>Rol: {{user.role}} </p>
    <p>Email: {{user.email}}</p>
    <p>Edad: {{user.age}}</p>
    <a href="/api/sessions/logout">Logout</a>
</header>
{{/if}}

<hr>

<div class="container">
    <h1>Listado de Productos</h1>
    <ul>
        {{#each productos}}
        <li><strong>{{this.titulo}}</strong></li>
        <li>{{this.descripcion}}</li>
        <li>Precio: ${{this.precio}}</li>
        <button> Agregar al Carrito </button>
        <hr>
        {{/each}}
    </ul>
    <div class="pagination">
        {{#if hasPrevPage}}
        <a href="/api/products?page={{prevPage}}">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="/api/products?page={{nextPage}}">Siguiente</a>
        {{/if}}
        <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
    </div>
</div>