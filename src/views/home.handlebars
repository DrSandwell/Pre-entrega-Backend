<div class="container">
    <h1>Listado de Productos</h1>
    <ul>
        {{#each productos}}
        <li><strong>{{this.titulo}}</strong></li>
        <li>{{this.descripcion}}</li>
        <li>Precio: ${{this.precio}}</li>
        <hr>
        {{/each}}
    </ul>
    <div class="pagination">
        {{#if hasPrevPage}}
        <a href="/api/products?page={{prevPage}}">Anterior</a>
        {{/if}}
        {{#if hasNextPage}}
        <a href="/api/products?page={{nextPage}}">Siguiente</a>
        {{/if}}
        <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
    </div>
</div>