<div>
<form>
    <div>
        <h1>Crear Producto</h1>
    </div>
    <input type="text" id="title" placeholder="Ingresa el nombre del producto">
    <input type="text" id="description" placeholder="Ingresa la descripcion del producto">
    <input type="number" id="price" placeholder="Ingresa el precio del producto">
    <input type="text" id="img" placeholder="Ingresa el link de la imagen del producto">
    <input type="text" id="code" placeholder="Ingresa el codigo del producto">
    <input type="number" id="stock" placeholder="Ingrese las unidades disponibles del producto">
    <input type="text" id="category" placeholder="Ingrese la categoria del producto">
    <select id="status" >
        <option value="true"> Activo </option>
        <option value="false"> Inactivo </option>
    </select>
    <button type="button" id="btnEnviar"> Enviar </button>
</form>
